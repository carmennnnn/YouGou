/* pages/search/index.wxss */
.search {
  background: #eee;
  padding: 25rpx;
}
.searchInput {
  display: flex;
  align-items: stretch;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  font-size: 12px;
  color:#666;
  border-radius: 8rpx;
}
.searchInput icon {
  padding: 15rpx 10rpx 10rpx 25rpx;
}
.tab {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  font-size: 14px;
}
.tab .active {
  color: #ff2d4a;
}
.goodsList {
  display: flex;
  justify-content: space-around;
}
.goodsList image {
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;
}
.goodsRigth {
  flex: 1;
  padding:25rpx;
}
.goodsName{
  font-size:13px;
  display: -webkit-box;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.goodsPrice{
  color: red;
  padding-top: 30rpx;
}
.loadMore {
  text-align: center;
  font-size:14px;
  color:#666;
  padding:20rpx;
}