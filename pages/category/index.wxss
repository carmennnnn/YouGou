/**index.wxss**/

.container{
  position:absolute;
  width: 100%;
  top:100rpx;
  bottom:0;
}
.search{
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:3px;
}
.searchInput{
  padding:20rpx;
  background: #ff2c4a;
  border: none;
  text-align: center;
  font-size: 14px;
  color:#999;
  /**固定搜索栏**/
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
}
.mian {
  position: relative;
  height: 100%;
  display: flex;
  justify-content: space-between;
}
.navs {
  /**侧菜单栏 绝对定位**/
  position: absolute;
  top: 0px;
  left: 0px;
  height:100%;
  /**滚动条**/
  overflow: scroll;
}
.navsItem{
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 12px;
  text-align: center;
  background: #eee;
  box-sizing: border-box;
  border-bottom:1px #eee solid;
}
.navs .active {
  color:#ff2c4a;
  background: #fff;
  position: relative;
  font-weight: 800;
}
.navs .active::before {
  content: "";
  width:10rpx;
  height: 60rpx;
  background: #ff2c4a;
  display: block;
  position: absolute;
  top: 15rpx;
  left: 0;
}
.category {
  flex:1;
  box-sizing: border-box;
  position: absolute;
  top: 0px;
  left: 200rpx;
  height: 100%;
  overflow:scroll;
}
.categoryTitle{
  margin:20rpx 0px 10rpx 0rpx;
  text-align:center;
  font-size:14px;
  color: #333
}
.categoryTitle > text {
  padding:0 5rpx;
  color: #eee
}
.categorylist{
  /* padding:0 10px; */
  display: flex;
  flex-wrap: wrap;
}
.categoryImg{
  width:33.3%;
  display: flex;
  flex-direction: column; 
  align-items:center;
  box-sizing:border-box;
}
.categorylist image{
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.categorylist > view {
  padding:10px 0px;
  font-size:12px;
  color: #666;
}